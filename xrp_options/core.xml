	<Frame name="$parent_core" parentKey="core" parent="xrp_options">
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalLarge" text="XRP_OPTIONS_CORE_TITLE">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="15" y="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="AHUnitsLabel" inherits="GameFontNormal" text="XRP_AH">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="AWUnitsLabel" inherits="GameFontNormal" text="XRP_AW">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.AHUnitsLabel" relativePoint="LEFT" x="250" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="CacheLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_CACHE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.AHUnitsLabel" relativePoint="BOTTOMLEFT" x="0" y="-50"/>
					</Anchors>
				</FontString>
				<FontString parentKey="CacheAutoLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_CACHEAUTO">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="250" y="-12"/>
					</Anchors>
				</FontString>
				<FontString parentKey="MinimapLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_MINIMAP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="0" y="-50"/>
					</Anchors>
				</FontString>
				<FontString parentKey="MinimapHideTTLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_MINIMAP_HIDETT">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.MinimapLabel" relativePoint="BOTTOMLEFT" x="24" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="MinimapDetachedLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_MINIMAP_DETACHED">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.MinimapHideTTLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_INTEGRATION">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.MinimapLabel" relativePoint="BOTTOMLEFT" x="0" y="-60"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationRightClickLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_RIGHTCLICK">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationLabel" relativePoint="BOTTOMLEFT" x="24" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationDisableInstanceLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_RIGHTCLICK_INSTANCE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationRightClickLabel" relativePoint="BOTTOMLEFT" x="28" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationInteractBindLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_INTERACTBIND">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationDisableInstanceLabel" relativePoint="BOTTOMLEFT" x="-28" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationReplacementsLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_REPLACEMENTS">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationInteractBindLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationMenusLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_MENUS">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationReplacementsLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationUnitMenusLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_UNITMENUS">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationMenusLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentAHUnits" parentKey="AHUnits" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.AHUnitsLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentAWUnits" parentKey="AWUnits" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.AWUnitsLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentCacheTime" parentKey="CacheTime" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<CheckButton name="$parentCacheAuto" parentKey="CacheAuto" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.CacheAutoLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentMinimapHideTT" parentKey="MinimapHideTT" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.MinimapHideTTLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentMinimapDetached" parentKey="MinimapDetached" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.MinimapDetachedLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
				<Scripts>
					<PostClick>
						local lock = self:GetParent().Lock
						lock:SetEnabled(self:GetChecked() == 1)
						lock:SetText(xrp.minimap.locked and UNLOCK or LOCK)
					</PostClick>
				</Scripts>
			</CheckButton>
			<Button name="$parentLock" parentKey="Lock" inherits="UIPanelButtonTemplate" text="LOCK">
				<Size x="72" y="21"/>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.MinimapDetachedLabel" relativePoint="RIGHT" x="10" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						xrp.minimap.locked = not xrp.minimap.locked;
						self:SetText(xrp.minimap.locked and UNLOCK or LOCK);
					</OnClick>
				</Scripts>
			</Button>
			<CheckButton name="$parentIntegrationRightClick" parentKey="IntegrationRightClick" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.IntegrationRightClickLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
				<Scripts>
					<PostClick>
						self:GetParent().IntegrationDisableInstance:SetEnabled(self:GetChecked() == 1)
					</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentIntegrationDisableInstance" parentKey="IntegrationDisableInstance" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.IntegrationDisableInstanceLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
				<Scripts>
					<OnEnable>
						self:GetParent().IntegrationDisableInstanceLabel:SetTextColor(1.0, 1.0, 1.0);
					</OnEnable>
					<OnDisable>
						self:GetParent().IntegrationDisableInstanceLabel:SetTextColor(0.5, 0.5, 0.5);
					</OnDisable>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentIntegrationInteractBind" parentKey="IntegrationInteractBind" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.IntegrationInteractBindLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentIntegrationReplacements" parentKey="IntegrationReplacements" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.IntegrationReplacementsLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentIntegrationMenus" parentKey="IntegrationMenus" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.IntegrationMenusLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentIntegrationUnitMenus" parentKey="IntegrationUnitMenus" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.IntegrationUnitMenusLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
		</Frames>
	</Frame>
</Ui>
