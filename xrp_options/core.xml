	<Frame name="XRPOptionsCore" parent="InterfaceOptionsFrame">
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalLarge" text="XRP_OPTIONS_CORE_TITLE">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="15" y="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="heightLabel" inherits="GameFontNormal" text="XRP_AH">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="weightLabel" inherits="GameFontNormal" text="XRP_AW">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.heightLabel" relativePoint="LEFT" x="250" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="CacheLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_CACHE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.heightLabel" relativePoint="BOTTOMLEFT" x="0" y="-50"/>
					</Anchors>
				</FontString>
				<FontString parentKey="cachetidyLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_CACHEAUTO">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="250" y="-12"/>
					</Anchors>
				</FontString>
				<FontString parentKey="MinimapLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_MINIMAP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="0" y="-50"/>
					</Anchors>
				</FontString>
				<FontString parentKey="hidettLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_MINIMAP_HIDETT">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.MinimapLabel" relativePoint="BOTTOMLEFT" x="24" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="detachedLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_MINIMAP_DETACHED">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.hidettLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="IntegrationLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_INTEGRATION">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.MinimapLabel" relativePoint="BOTTOMLEFT" x="0" y="-60"/>
					</Anchors>
				</FontString>
				<FontString parentKey="rightclickLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_RIGHTCLICK">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.IntegrationLabel" relativePoint="BOTTOMLEFT" x="24" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="disableinstanceLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_RIGHTCLICK_INSTANCE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.rightclickLabel" relativePoint="BOTTOMLEFT" x="28" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="disablepvpLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_RIGHTCLICK_PVP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.disableinstanceLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="interactLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_INTERACTBIND">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.disablepvpLabel" relativePoint="BOTTOMLEFT" x="-28" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="replacementsLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_REPLACEMENTS">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.interactLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="menusLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_MENUS">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.replacementsLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="unitmenusLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_INTEGRATION_UNITMENUS">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.menusLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="XRPOptionsCoreHeightMenu" parentKey="height" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.heightLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="XRPOptionsCoreWeightMenu" parentKey="weight" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.weightLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="XRPOptionsCoreCacheTimeMenu" parentKey="cachetime" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<CheckButton parentKey="cachetidy" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.cachetidyLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton parentKey="hidett" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.hidettLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton parentKey="detached" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.detachedLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton parentKey="rightclick" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.rightclickLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
				<Scripts>
					<PostClick>
						local enable = self:GetChecked()
						self:GetParent().disableinstance:SetEnabled(enable)
						self:GetParent().disablepvp:SetEnabled(enable)
					</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton parentKey="disableinstance" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.disableinstanceLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
				<Scripts>
					<OnEnable>
						self:GetParent().disableinstanceLabel:SetTextColor(1.0, 1.0, 1.0);
					</OnEnable>
					<OnDisable>
						self:GetParent().disableinstanceLabel:SetTextColor(0.5, 0.5, 0.5);
					</OnDisable>
				</Scripts>
			</CheckButton>
			<CheckButton parentKey="disablepvp" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.disablepvpLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
				<Scripts>
					<OnEnable>
						self:GetParent().disablepvpLabel:SetTextColor(1.0, 1.0, 1.0);
					</OnEnable>
					<OnDisable>
						self:GetParent().disablepvpLabel:SetTextColor(0.5, 0.5, 0.5);
					</OnDisable>
				</Scripts>
			</CheckButton>
			<CheckButton parentKey="interact" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.interactLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton parentKey="replacements" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.replacementsLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton parentKey="menus" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.menusLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton parentKey="unitmenus" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.unitmenusLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
		</Frames>
	</Frame>
</Ui>
