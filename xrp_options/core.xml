	<Frame name="$parent_core" parentKey="core" parent="xrp_options">
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalLarge" text="XRP_OPTIONS_CORE_TITLE">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="15" y="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="AHUnitsLabel" inherits="GameFontNormal" text="XRP_AH">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="AWUnitsLabel" inherits="GameFontNormal" text="XRP_AW">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.AHUnitsLabel" relativePoint="LEFT" x="250" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="CacheLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_CACHE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.AHUnitsLabel" relativePoint="BOTTOMLEFT" x="0" y="-50"/>
					</Anchors>
				</FontString>
				<FontString parentKey="CacheAutoLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_CACHEAUTO">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="250" y="-12"/>
					</Anchors>
				</FontString>
				<FontString parentKey="MinimapLabel" inherits="GameFontNormal" text="XRP_OPTIONS_CORE_MINIMAP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="0" y="-50"/>
					</Anchors>
				</FontString>
				<FontString parentKey="HideMinimapTTLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_MINIMAP_HIDETT">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.MinimapLabel" relativePoint="BOTTOMLEFT" x="24" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="MinimapDetachedLabel" inherits="GameFontWhite" text="XRP_OPTIONS_CORE_MINIMAP_DETACHED">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.HideMinimapTTLabel" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentAHUnits" parentKey="AHUnits" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.AHUnitsLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentAWUnits" parentKey="AWUnits" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.AWUnitsLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentCacheTime" parentKey="CacheTime" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CacheLabel" relativePoint="BOTTOMLEFT" x="-22" y="-5"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_SetWidth(self, 200, 0);
					</OnLoad>
				</Scripts>
			</Button>
			<CheckButton name="$parentCacheAuto" parentKey="CacheAuto" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.CacheAutoLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentHideMinimapTT" parentKey="HideMinimapTT" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.HideMinimapTTLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<CheckButton name="$parentMinimapDetached" parentKey="MinimapDetached" inherits="UICheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.MinimapDetachedLabel" relativePoint="LEFT" x="-4" y="0"/>
				</Anchors>
			</CheckButton>
			<Button name="$parentLock" parentKey="Lock" inherits="UIPanelButtonTemplate" text="LOCK">
				<Size x="72" y="21"/>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.MinimapDetachedLabel" relativePoint="RIGHT" x="10" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						xrp.minimap.locked = not xrp.minimap.locked;
						self:SetText(xrp.minimap.locked and UNLOCK or LOCK);
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
</Ui>
