	<Frame name="$parent_options" parentKey="options" parent="xrp" hidden="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="GameFontNormalLarge" text="XRP">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="15" y="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Author" inherits="GameFontWhite" text="XRP_AUTHOR">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-5"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Version" inherits="GameFontWhite" text="XRP_VERSION">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Author" relativePoint="BOTTOMLEFT" x="0" y="-5"/>
					</Anchors>
				</FontString>
				<FontString parentKey="CopyHeader" inherits="GameFontNormalLarge" text="XRP_COPYHEADER">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Version" relativePoint="BOTTOMLEFT" x="0" y="-15"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Copyright" inherits="GameFontWhite" text="XRP_COPYRIGHT">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.CopyHeader" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="License" inherits="GameFontWhite" text="XRP_LICENSE" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Copyright" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentCacheClear" parentKey="CacheClear" inherits="UIPanelButtonTemplate" text="Clear Cache">
				<Size x="96" y="21"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-15" y="15"/>
				</Anchors>
				<Scripts>
					<OnClick>
						StaticPopup_Show("XRP_CACHE_CLEAR");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentCacheTidy" parentKey="CacheTidy" inherits="UIPanelButtonTemplate" text="Tidy Cache">
				<Size x="96" y="21"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.CacheClear" relativePoint="LEFT" x="-15"/>
				</Anchors>
				<Scripts>
					<OnClick>
						xrp:CacheTidy();
						StaticPopup_Show("XRP_CACHE_TIDIED");
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self.name = XRP;
				InterfaceOptions_AddCategory(self);
			</OnLoad>
			<OnShow>
				xrp:ShowOptions();
				self:SetScript("OnShow", nil);
			</OnShow>
		</Scripts>
	</Frame>
</Ui>
