	<Binding name="XRP_STATUS" header="XRP" category="ADDONS">
		xrp:Status()
	</Binding>
	<Binding name="XRP_EDITOR" category="ADDONS">
		xrp:Edit()
	</Binding>
	<Binding name="XRP_VIEWER" category="ADDONS">
		if xrp.characters.byUnit.target then
			xrp:View("target")
		elseif xrp.characters.byUnit.mouseover then
			xrp:View("mouseover")
		end
	</Binding>
	<Binding name="XRP_VIEWER_TARGET" category="ADDONS">
		if xrp.characters.byUnit.target then
			xrp:View("target")
		end
	</Binding>
	<Binding name="XRP_VIEWER_MOUSEOVER" category="ADDONS">
		if xrp.characters.byUnit.mouseover then
			xrp:View("mouseover")
		end
	</Binding>
</Bindings>
