							parent:GetParent():GetParent():CheckFields(parent.field)
						end
					</OnTextChanged>
					<OnCursorChanged function="ScrollingEdit_OnCursorChanged"/>
					<OnUpdate>
						ScrollingEdit_OnUpdate(self, elapsed, self:GetParent())
					</OnUpdate>
					<OnEscapePressed>
						self:ClearFocus()
					</OnEscapePressed>
					<OnEditFocusGained>
						if self.inherited then
							self:SetAttribute("inherited", false)
							self:SetAttribute("contents", "")
						end
					</OnEditFocusGained>
					<OnEditFocusLost>
						self:ClearFocus()
						self:GetParent():GetParent():GetParent():CheckFields(self.field)
					</OnEditFocusLost>
				</Scripts>
				<FontString inherits="GameFontWhite"/>
			</EditBox>
